{
    "compilerOptions": {
        "target": "es2017",
        "module": "ESNext",
        "jsx": "react-jsx",
        "lib": ["DOM"],
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,

        "moduleResolution": "node",

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["src/scripts/**/*"]
}
