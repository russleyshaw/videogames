{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [],
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,

        "moduleResolution": "node",

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "resolveJsonModule": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["src/webapp/**/*"]
}
